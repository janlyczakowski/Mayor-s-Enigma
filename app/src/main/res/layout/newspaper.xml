<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#28363E">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/audio_button"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/intro_title"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_speaker_enabled" />

                <LinearLayout
                    android:id="@+id/intro_title"
                    android:layout_width="280sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_marginLeft="30sp"
                   >

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:lineSpacingExtra="2dp"
                        android:text="Dresden in Disarray: Mayorâ€™s Mysterious Disappearance     Baffles Investigators"
                        android:textColor="#EDB777"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView"
                        android:text="\nDresden Gazette, January 11, 1923"
                        android:textColor="#EDB777"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:layout_below="@+id/intro_title">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/pic"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="20dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:src="@drawable/police" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:justificationMode="inter_word"

                            android:lineSpacingExtra="2dp"
                            android:text="@string/newspaper"
                            android:textColor="#FFFF"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>


                <Button
                    android:id="@+id/imageview"
                    android:layout_width="250sp"
                    android:layout_height="60sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40sp"
                    android:layout_marginBottom="40sp"
                    android:background="@drawable/shape"
                    android:layout_below="@+id/content"
                    android:layout_centerHorizontal="true"
                    android:onClick="onClickBeginListener"
                    android:text="START"
                    android:textColor="#EDB777"
                    android:textSize="40sp" />
            </RelativeLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>



