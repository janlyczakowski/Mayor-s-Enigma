<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Map" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:fontFamily">@font/sansus_webissimo</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Map" parent="Base.Theme.Map" />

    <style name="Base.Theme.FourSuspects" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!--<item name="android:background">@color/slate_gray</item>-->

    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/deep_orange</item>
    </style>

    <style name="RadioButtonTheme">
        <item name="colorControlActivated">@color/deep_orange</item>
        <item name="colorControlNormal">@color/dark_gray</item>
    </style>


    <style name="PrimaryButton">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:textColor">@color/deep_orange</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:background">@color/slate_gray</item>
        <item name="android:textColor">@color/deep_orange</item>
    </style>

    <style name="PrimaryTitle_big">
        <item name="android:textColor">@color/deep_orange</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="PrimaryTitle_small">
        <item name="android:textColor">@color/deep_orange</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SecondaryTitle_big">
        <item name="android:textColor">@color/deep_orange</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="SecondaryTitle_small">
        <item name="android:textColor">@color/deep_orange</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TertriaryButton">
        <item name="android:background">@color/gray_brown</item>
        <item name="android:textColor">@color/gray_bright
        </item>
    </style>

    <style name="Theme.FourSuspects" parent="Base.Theme.FourSuspects" />


</resources>